<?xml version="1.0" encoding="utf-8"?>
<!--
    Reglas de Auto-Backup para Android 6.0+
    Excluye archivos sensibles del respaldo automático de Google Drive.
-->
<full-backup-content>
    <!-- Excluir credenciales y datos de sesión -->
    <exclude domain="sharedpref" path="." />
    <exclude domain="database" path="." />
    <exclude domain="file" path="." />
    <!-- Conservar solo preferencias no sensibles (p.ej. configuración de UI) -->
    <!-- Si se requiere respaldar algo específico en el futuro, agregar:   -->
    <!-- <include domain="sharedpref" path="ui_preferences.xml" />         -->
</full-backup-content>
